  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^18.14.5",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.6.0",
    "husky": ">=6",
    "lint-staged": ">=10",
    "nodemon": "^2.0.21",
    "prettier": "2.8.4",
    "typescript": "^4.9.5"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
